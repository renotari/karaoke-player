<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:KaraokePlayer.Views"
             x:Class="KaraokePlayer.Views.ToastNotificationContainer">
    
    <ItemsControl Items="{Binding Notifications}"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Right"
                  Margin="0,0,16,16">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <views:ToastNotificationControl DismissRequested="OnDismissRequested"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
